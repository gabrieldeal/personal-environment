#!/bin/sh
#-*-shell-script-*-

dir="$@"
if [ -s "$dir" ]
then
    dir=.
fi

find $dir \
    -name node_modules -prune -o \
    \( \
	-name Makefile \
	-o -name \*.xml \
	-o -name \*.pm \
	-o -name \*.ln \
	-o -name \*.erb \
	-o -name \*.rb \
	-o -name \*.yml \
	-o -name \*.css \
	-o -name \*.js \
	-o -name Rakefile \
	-o -name Gemfile \
    \) -print
