#!/bin/sh -x
#-*-shell-script-*-

dir="$@"
if [ -z "$dir" ]
then
    dir=.
fi

find $dir \
    -name node_modules -prune -o \
    -name .cache -prune -o \
    -name blib -prune -o \
    -name public -prune -o \
    -name generated -prune -o \
    \( \
	-name Makefile \
	-o -name \*.xml \
	-o -name \*.pm \
	-o -name \*.ln \
	-o -name \*.erb \
	-o -name \*.rb \
	-o -name \*.yml \
	-o -name \*.css \
	-o -name \*.js \
	-o -name \*.jsx \
	-o -name \*.es6 \
	-o -name Procfile \
	-o -name package.json \
	-o -name Rakefile \
	-o -name Gemfile \
    \) -print
