#!/usr/bin/bash
# -*- shell-script -*-

# The PATH is not set correctly when started via a Windows shortcut.
which ssh-add >/dev/null 2>&1 || PATH=/usr/bin:$PATH

ssh-add -l &>/dev/null
status=$?
if [ "$status" == 1 ]; then
    # Connected to ssh-agent, but no identities have been added
    ssh-add
elif [ "$status" == 2 ]; then
    # No ssh-agent config or the config is out of date
    test -r ~/.ssh-agent && \
	eval "$(<~/.ssh-agent)" >/dev/null

    ssh-add -l &>/dev/null
    status=$?
    if [ "$status" == 1 ]; then
	# ssh-agent is running, but no identities have been added
	ssh-add
    elif [ "$status" == 2 ]; then
	# ssh-agent is not running
	(umask 066; ssh-agent > ~/.ssh-agent)
	eval "$(<~/.ssh-agent)" >/dev/null
	ssh-add
    fi
fi

if [ -n "$1" ]
then
    # This is used in a shortcut to run ssh after setting up ssh-agent.
    exec "$@"
fi
