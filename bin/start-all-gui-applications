#!/usr/bin/env bash

# Used in Unity's "Startup Applications".

switch_workspace() {
    local workspace=$(expr $1 - 1)
    local is_first="$2"

    # Give previously opened windows time to start on the right workspace:
    [ "$is_first" = "true" ] || sleep 5

    wmctrl -s "$workspace"
}

switch_workspace 1 true
/opt/google/chrome/chrome &
/usr/bin/keepassxc &
# $HOME/local/bin/start-pomodoro-bash &

switch_workspace 5

# I stopped using this in Emacs because it takes too much CPU for
# emacs to parse the copious output.
/usr/bin/gnome-terminal \
    --profile Tool \
    --execute $HOME/local/bin/run-oss-huddle-webpack &

/usr/bin/gnome-terminal \
    --profile Tool \
    --execute $HOME/local/bin/run-in $HOME/projects/oss/huddle \
    mailcatcher --foreground &

/usr/bin/gnome-terminal \
    --profile Tool \
    --execute $HOME/local/bin/start-oss-slack-ngrok &

switch_workspace 2
$HOME/local/bin/emacs-huddle &
/usr/bin/gnome-terminal &
/usr/bin/gnome-terminal \
    --profile Tool \
    --execute $HOME/local/bin/start-huddle-hack &

# sleep 10
#
# switch_workspace 3
# /usr/bin/gnome-system-monitor &
# /usr/bin/VirtualBox &
#
# sleep 5
#
# switch_workspace 1
