#!/usr/bin/env bash
#-*- shell-script -*-

time="8:59:30"
if [ -n "$1" ]
then
    time="$1"
fi

message="standup!"
if [ -n "$2" ]
then
    message="$2"
fi

seconds=$(( $(date -d "$time" +%s) - $(date +%s) ))

expire_ms=$(( 30 * 1000 ))
export DISPLAY=:0
export XAUTHORITY=/home/gabrielx/.Xauthority
(sleep $seconds && notify-send -t $expire_ms -u critical "$message") &
