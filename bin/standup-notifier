#!/usr/bin/env bash
#-*- shell-script -*-

time="$1"
if [ -z "$time" ]
then
    message="Usage: standup-notifier TIME"
    echo "$message" 1>&2
    notify-send -u critical "$message"
    exit 1
fi

message="standup!"
if [ -n "$2" ]
then
    message="$2"
fi

seconds=$(( $(date -d "$time" +%s) - $(date +%s) ))

expire_ms=$(( 60 * 1000 ))
export DISPLAY=:0
export XAUTHORITY=/home/gabrielx/.Xauthority
(sleep $seconds && notify-send -t $expire_ms -u critical "$message") &
