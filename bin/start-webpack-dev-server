#!/usr/bin/env bash

skip_reset="$1"

export PATH="$PATH:~/bin"

set-xterm-title "OSS webpack dev server"

# Because 'nvm' is a shell function:
. "$HOME/.nvm/nvm.sh"

#    && source "$(dirname "$0")/export-webpack-dev-server-settings" \

cd ~/projects/oss/huddle || exit 1

if [ "$skip_reset" != "skip" ]
then
    rm -rf node_modules vendor/node_modules || exit 1
fi

nvm install stable \
    && yarn install \
    && bin/webpack-dev-server --inline --host "$WEBPACKER_DEV_SERVER_HOST"
