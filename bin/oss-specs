#!/usr/bin/env bash

function slack_desk_booking_specs() {
    find spec/ -name \*_spec.rb | grep slack | grep desk_booking
}

function slack_specs() {
    find spec/ -name \*_spec.rb | grep slack
}

function printing_specs() {
    find spec/ -name \*_spec.rb | grep -e print -e svg
}

fail() {
    echo "$@" 1>&2
    exit 1
}

type="$1"
case "$type" in
    print*)
	printing_specs
	;;
    slack-short)
	slack_specs | grep -v -e find_controller_spec -e employee_slack_search_spec
	;;
    slack)
	slack_specs
	;;
    slack-desk-booking)
	slack_desk_booking_specs
	;;
    *)
	fail "Usage: $0 TYPE"
	;;
esac
