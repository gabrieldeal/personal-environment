#!/usr/bin/env bash

. "$HOME/.nvm/nvm.sh"

cd ~/projects/oss/huddle \
    && bundle install \
    && nvm install "$(cat .node-version)" \
    && nvm use "$(cat .node-version)" \
    && (yarn --check-files --frozen-lockfile --ignore-optional install) \
    && RAILS_ENV=development bin/webpack --progress
