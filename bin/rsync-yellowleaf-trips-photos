#!/usr/bin/env bash

base_dest="/cygdrive/e"
if [ -n "$1" ]
then
    base_dest="$1"
fi

dest="$base_dest/Users/Gabriel/d/Pictures/yellowleaf-trips/"
mkdir -p "$dest"
rsync \
    --archive \
    --delete-before \
    --verbose \
    /cygdrive/d/Gabriel/Pictures/yellowleaf-trips/ \
    "$dest" \
    | grep -E '^deleting|[^/]$|^$'

echo -n "Ready to rsync user files?"
read pause

dest="$base_dest/Users/Lindsay/c"
mkdir -p "$dest"
rsync \
    --archive \
    --delete-before \
    --verbose \
    /cygdrive/c/Users/Lindsay/ \
    "$dest" \
    | grep -E '^deleting|[^/]$|^$'

dest="$base_dest/Users/Lindsay/d"
mkdir -p "$dest"
rsync \
    --archive \
    --delete-before \
    --verbose \
    /cygdrive/d/Lindsay/ \
    "$dest" \
    | grep -E '^deleting|[^/]$|^$'

echo -n "Ready to rsync Gabriel's files?"
read pause

dest="$base_dest/Users/Gabriel/c"
mkdir -p "$dest"
rsync \
    --archive \
    --delete-before \
    --verbose \
    /cygdrive/c/Users/Gabriel/ \
    "$dest" \
    | grep -E '^deleting|[^/]$|^$'

dest="$base_dest/Users/Gabriel/d"
mkdir -p "$dest"
rsync \
    --archive \
    --delete-before \
    --verbose \
    /cygdrive/d/Gabriel/ \
    "$dest" \
    | grep -E '^deleting|[^/]$|^$'



