#!/usr/bin/env bash

dest="/cygdrive/e"
if [ -n "$1" ]
then
    dest="$1"
fi

rsync \
    --archive \
    --delete-before \
    --verbose \
    /cygdrive/d/Gabriel/Pictures/yellowleaf-trips/ \
    "$dest/Users/Gabriel/projects/yellowleaf-trips/data/gabrielx/reports/" \
    | grep -E '^deleting|[^/]$|^$'

echo -n "Ready to rsync Lindsay's files?"
read pause

rsync \
    --archive \
    --delete-before \
    --verbose \
    /cygdrive/c/Users/Lindsay/ \
    "$dest/Users/LindsayMalone/c" \
    | grep -E '^deleting|[^/]$|^$'

rsync \
    --archive \
    --delete-before \
    --verbose \
    /cygdrive/d/Lindsay/ \
    "$dest/Users/LindsayMalone/d" \
    | grep -E '^deleting|[^/]$|^$'



