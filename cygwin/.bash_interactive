#-*-shell-script-*-

# If not running interactively, don't do anything
case $- in
    *i*) ;;
      *) return;;
esac

HISTCONTROL=ignoredups
HISTSIZE=10000
HISTFILESIZE=10000
shopt -s histappend

# check the window size after each command and, if necessary,
# update the values of LINES and COLUMNS.
shopt -s checkwinsize

PS1='\w\$ '

export EDITOR=emacs
export PATH="$PATH:/cygdrive/c/Program Files (x86)/7-Zip/:/cygdrive/c/Users/Gabriel/home/bin/:/cygdrive/c/Users/Gabriel/home/projects/yellowleaf-trips/bin"

export LESS="-I -R"

# Disable constantly changing the terminal title.
export PROMPT_COMMAND=

######################################################################
## SSH Agent

ssh-add -l &>/dev/null
if [ "$?" == 2 ]; then
    test -r ~/.ssh-agent && \
	eval "$(<~/.ssh-agent)" >/dev/null

    ssh-add -l &>/dev/null
    if [ "$?" == 2 ]; then
	(umask 066; ssh-agent > ~/.ssh-agent)
	eval "$(<~/.ssh-agent)" >/dev/null
	ssh-add
    fi
fi
