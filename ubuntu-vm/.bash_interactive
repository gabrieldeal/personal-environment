#-*-shell-script-*-

# If not running interactively, don't do anything
case $- in
    *i*) ;;
      *) return;;
esac

source ~/config/.bash_interactive

######################################################################
## SSH Agent

ssh-add -l &>/dev/null
if [ "$?" == 2 ]; then
    test -r ~/.ssh-agent && \
	eval "$(<~/.ssh-agent)" >/dev/null

    ssh-add -l &>/dev/null
    if [ "$?" == 2 ]; then
	(umask 066; ssh-agent > ~/.ssh-agent)
	eval "$(<~/.ssh-agent)" >/dev/null
	ssh-add
    fi
fi
